{
  "name": "euro-trip",
  "version": "1.0.0",
  "description": "Путешествие по Европе",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/",
    "build": "gulp build",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "12.18.2"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "9.8.4",
    "browser-sync": "^2.26.13",
    "del": "^6.0.0",
    "eslint": "^7.14.0",
    "eslint-config-htmlacademy": "^0.6.0",
    "gulp": "^4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-svgstore": "^7.0.1",
    "gulp-webp": "^4.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-htmlacademy": "^0.1.4"
  }
}
